<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= artist.name %> - Albums</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/nav') %>
    <div class="artist-cont">
        <div class="artist-card">
            <div class="artist-img">
                <% if (artist.image) { %>
                    <img src="<%= artist.image %>" alt="<%= artist.first_name %>">
                <% } %>
            </div>
            <div class="artist-info">
                <h2>Albums by <%= artist.name %></h2>
                <p><strong>Born:</strong> <%= artist.birth_date ? artist.birth_date.toDateString() : 'N/A' %></p>
                <p><strong>Country:</strong> <%= artist.country%></p>
            </div>
        </div>
        <div class="albums-grid">
            <% albums.forEach(album => { %>
                <div class="album-card">
                    <a href="/album/<%= encodeURIComponent(album.title) %>">
                        <img src="<%= album.image %>" alt="<%= album.title %>">
                        <div class="album-info">
                            <h3><%= album.title %></h3>
                            <p><strong>Release Date:</strong> <%= album.release_date_formatted %></p>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
