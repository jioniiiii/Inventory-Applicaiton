<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Albums</title>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <style>
        body {
    font-family: Arial, sans-serif;
    margin: 0;
    background-color: #f5f5f5;
    color: #333;
}
.navbar {
    background: #1f1f1f;
    padding: 10px 20px;
}

.nav-links {
    list-style: none;
    display: flex;
    justify-content: flex-start;
}

.nav-links li {
    margin-right: 20px;
}

.nav-links a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
}

header {
    text-align: center;
    margin: 20px 0;
    color: #444;
}

.swiper-container {
    padding: 20px;
}

.album-card {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s;
}

.album-card:hover {
    transform: scale(1.05);
}

.album-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
}

.album-info {
    padding: 10px;
    text-align: center;
}

.swiper-pagination {
    margin-top: 1rem;
   
}
a {
            color: black;
            text-decoration: none;
        }

</style>
</head>
<body>
    <nav class="navbar">
        <ul class="nav-links">
            <li><a href="/albums">Albums</a></li>
            <li><a href="/genres">Genres</a></li>
            <li><a href="/labels">Labels</a></li>
            <li><a href="/artists">Artists</a></li>
        </ul>
    </nav>

    <header>
        <h1>Featured Albums</h1>
    </header>

    <div class="swiper-container">
        <div class="swiper-wrapper">
            <% featuredAlbums.forEach(album => { %>
                <div class="swiper-slide album-card">
                    <a href="/album/<%= encodeURIComponent(album.title) %>">
                        <img src="<%= album.image %>" alt="<%= album.title %>">
                        <div class="album-info">
                            <h2><%= album.title %></h2>
                            <p><strong>Artist:</strong> <%= album.artist.name %></p>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>

        <h1>ADD HOT DEALS WITH NEW ALBUMS</h1>

    </div>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Swiper
            var swiper = new Swiper('.swiper-container', {
                loop: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                slidesPerView: 3,
                spaceBetween: 20,
                breakpoints: {
                    768: {
                        slidesPerView: 3,
                        spaceBetween: 20,
                    },
                    480: {
                        slidesPerView: 1,
                        spaceBetween: 10,
                    },
                },
            });
        });
    </script>
</body>
</html>